package api.io;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class FileCopy {
	public static void main(String[] args) {
		//FileTest01.java파일 copy하기
		//1. FileReader로 읽고 FileWriter로 출력하기
		//2. src/data/copy_result.txt로 생성하기
		//3. 콘솔로도 출력되도록 작성
		FileReader fs = null;
		try{
			fs = new FileReader("C://iot/work/javawork/advancedJava/src/api.io/FileTest01.java");
			while(true) {
				int data = fs.read();
				if(data==-1) {
					break;
				}
				System.out.print((char)data);
			}
		}catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}finally {
			try{
				if(fs!=null)fs.close();
			}catch (IOException e) {
				e.printStackTrace();
			}
		}
		/*try {
			File f = new File("src/api.io/FileTest01.java");
			FileReader fr = new FileReader(f);
			FileWriter fw = new FileWriter("src/data/copy_result.txt");
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}*/
		
	}
}
