<head>
	<meta charset="EUC-KR">
	<title>Insert title here</title>
	<script type="text/javascript">
		function allcheck() {
			mycheck = document.myform.prd 		//각 상품별 체크박스
			allcheckVal = myform.allchk.checked //전체선택 체크박스
			for(i=0;i<mycheck.length;i++){
				mycheck[i].checked = allcheckVal
			}
			calc()
		}
		function calc() {
			myarr = document.getElementsByClassName("calcprice")
			for(i=0;i<myarr.length;i++) {
				myarr[i].innerHTML = myform.count.value * myform.price.value
			}
		}
		
	</script>
</head>
<body>
	<form name="myform">
