	today = new Date();
	day = today.getDay();
	hour = today.getHours();
		if(hour<12){
			document.bgColor = "lime";
		}else{
			document.bgColor = "red";
		}
		document.write("<img src='../images/jang"+(day+1)+".jpg'/>");
		
