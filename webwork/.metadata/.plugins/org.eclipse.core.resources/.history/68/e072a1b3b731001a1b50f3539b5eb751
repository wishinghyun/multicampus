	<script type="text/javascript">
	today = new Date();
	day = today.getDay();
	weekday = "";
		switch(day)
		{
		case 0:
			weekday="1.jpg";
			break;
		case 1:
			weekday="2.jpg";
			break;
		case 2:
			weekday="3.jpg";
			break;
		case 3:
			weekday="4.jpg";
			break;
		case 4:
			weekday="5.jpg";
			break;
		case 5:
			weekday="6.jpg";
			break;
		case 6:
			weekday="7.jpg";
			break;
		}
		document.write("<img src='../images/jang"+weekday+"'/>");
	</script>
	
